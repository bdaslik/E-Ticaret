@model ETicaret.Stok

@{
    ViewBag.Title = "Stok Düzenleme";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Stok Düzenle</h3>
            </div><!-- /.box-header -->
            <!-- form start -->

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.StokID)

                <div class="form-group">
                    <p class="control-label col-md-2">Ürün Adı:</p>
                    <div class="col-md-10">
                        @Html.DropDownList("UrunID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UrunID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Stok Adedi:</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Adet, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Adet, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-success btn-lg" /> | @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-default btn-lg" })
                    </div>
                </div>
            </div>
        </div><!-- /.box -->
        <!-- Form Element sizes -->

    </div><!--/.col (left) -->
}

