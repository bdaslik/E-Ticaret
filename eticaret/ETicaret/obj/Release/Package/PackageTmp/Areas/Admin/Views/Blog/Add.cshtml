@model ETicaret.Areas.Admin.Models.BlogModel

@{
    ViewBag.Title = "İnceleme Ekleme";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("AddBlog", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Yeni Ürün İncelemesi Ekle</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <p class="control-label col-md-2"><b>Resim :</b></p>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Resim, new { @class = "form-control", type = "file", accept = "image/*" })
                        @Html.ValidationMessageFor(model => model.Resim, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Ürün Adı:</b></p>
                    <div class="col-md-10">
                        @Html.DropDownList("UrunID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UrunID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Başlık :</b></p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control", placeholder = "Başlık giriniz..." } })
                        @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Tarih :</b></p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.tarih, new { htmlAttributes = new { @class = "form-control", placeholder = "gg/aa/yyyy" } })
                        @Html.ValidationMessageFor(model => model.tarih, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Metin :</b></p>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Metin, new { @class = "textarea", placeholder = "İnceleme Metini" , style = "width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" } )
                        @Html.ValidationMessageFor(model => model.Metin, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Oluştur" class="btn btn-success btn-sm" /> | @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-default btn-sm" })
                    </div>
                </div>
            </div>
        </div><!-- /.box -->
        <!-- Form Element sizes -->

    </div><!--/.col (left) -->
    

}


