@model IEnumerable<ETicaret.Kategori>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div>
    @Html.ActionLink("Yeni Kategori Ekle", "Create", null, new { @class = "btn btn-primary" })
</div>


<div class="row">
    <div class="col-xs-6">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Kayıtlı Kategoriler</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Kategori Adı</th>
                            <th width="200">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.KategoriAd)
                                </td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Edit", new { id = item.KategoriID }, new { @class = "btn-warning btn-xs" }) |
                                    @Html.ActionLink("Sil", "Delete", new { id = item.KategoriID }, new { @class = "btn-danger btn-xs" })
                                </td>
                            </tr>
                        }

                     
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

    </div>
</div>