@model ETicaret.Slider

@{
    ViewBag.Title = "Slider silme";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<p class="lead">Silmek İstediğinize Emin misiniz?</p>
    <div>

        <hr />
        <div class="col-md-6">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <i class="fa fa-text-width"></i>
                    <h3 class="box-title">Slider Detayları</h3>
                </div><!-- /.box-header -->
                <div class="box-body">

                    <dl class="dl-horizontal">
                        <table>
                            <tr>
                                <td>
                                    <img src="@Model.ResimYolu" style="max-height:auto; width:150px;" />

                                </td>
                                <td>
                        <dt>
<p><b>Başlık :</b></p>
                    </dt>

                    <dd>
                        <p class="text-light-blue">  @Html.DisplayFor(model => model.Baslik)</p>
                    </dd>

                    <dt>
                        <p><b>Fiyat :</b></p>
                    </dt>

                    <dd>
                        <p class="text-light-blue">  @Html.DisplayFor(model => model.Fiyat)</p>
                    </dd>

                    <dt>
                        <p><b>Mesaj :</b></p>
                    </dt>

                    <dd>
                        <p class="text-light-blue">  @Html.DisplayFor(model => model.Mesaj)</p>
                    </dd>

                    <dt>
                        <p><b>Ürün ID :</b></p>
                    </dt>

                    <dd>
                        <p class="text-light-blue">    @Html.DisplayFor(model => model.link)</p>
                    </dd>

                    <dt>
                        <p><b>Aktiflik :</b></p>
                    </dt>

                    <dd>
                        <p class="text-light-blue">  @Html.DisplayFor(model => model.aktif)</p>
                    </dd></td>
                    </tr>
                    </table>



                </dl>
                <br /><br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Slider Sil" class="btn-danger btn-sm" /> |
                        @Html.ActionLink("Geri Dön", "Index", new { id = Model.link }, new { @class = "btn-default btn-sm" })
                    </div>
                }
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- ./col -->

   
</div>
