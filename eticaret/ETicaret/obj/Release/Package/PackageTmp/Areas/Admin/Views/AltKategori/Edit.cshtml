@model ETicaret.Alt_Kategori

@{
    ViewBag.Title = "Alt Kategori Düzenleme";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Alt Kategoriyi Düzenle</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.AK_ID)

                <div class="form-group">
                    <p class="control-label col-md-2">Alt Kategori Adı:</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Kategori Adı:</p>
                    <div class="col-md-10">
                        @Html.DropDownList("KategoriID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.KategoriID, "", new { @class = "text-danger" })
                    </div>
                </div>

                

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-success btn-sm" /> | @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-default btn-sm" })
                    </div>
                </div>
            </div>
        </div><!-- /.box -->
        <!-- Form Element sizes -->

    </div>
}


<!--/.col (left) -->