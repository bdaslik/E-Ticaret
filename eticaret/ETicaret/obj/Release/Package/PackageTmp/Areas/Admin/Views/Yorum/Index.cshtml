@model IEnumerable<ETicaret.Yorum>

@{
    ViewBag.Title = "Yorum Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Ürün Yorumları</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Ürün</th>
                            <th>Üye Adı</th>
                            <th>Yorum</th>
                            <th>Tarih</th>
                            <th width="200">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Urunler.Model)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Uyeler.Ad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Yorum1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tarih)
                                </td>
                                
                                <td>
                                    @Html.ActionLink("Yorumu Sil", "Delete", new { id = item.Yorum_ID }, new { @class = "btn-danger btn-xs" })
                                </td>
                            </tr>
                        }

                     
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

    </div>
</div>

