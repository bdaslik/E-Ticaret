@model IEnumerable<ETicaret.Blog>

@{
    ViewBag.Title = "Ürün İncelemeleri";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div>
    @Html.ActionLink("Ürün İncelemesi Ekle", "Add", null, new { @class = "btn btn-primary" })
</div>


<div class="row">
    <div class="col-xs-12">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Ürün İncelemeleri</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Ürün Adı</th>
                            <th>Başlık</th>
                            <th>Metin</th>
                            <th>Tarih</th>
                            <th width="200">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.BlogResim" style="max-height:50px; width:auto;" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Urunler.Model)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Baslik)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Metin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tarih)
                                </td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Edit", new { id = item.BlogID }, new { @class = "btn-warning btn-xs" }) |
                                    @Html.ActionLink("Detaylar", "Details", new { id = item.BlogID }, new { @class = "btn-info btn-xs" }) |
                                    @Html.ActionLink("Sil", "Delete", new { id = item.BlogID }, new { @class = "btn-danger btn-xs" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

    </div>
</div>

