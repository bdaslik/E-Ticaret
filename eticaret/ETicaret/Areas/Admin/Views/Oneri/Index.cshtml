@model IEnumerable<ETicaret.Oneri>

@{
    ViewBag.Title = "Ürün Öneri";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div>
    @Html.ActionLink("Ürün Öner", "Create", null, new { @class = "btn btn-primary" })
</div>


<div class="row">
    <div class="col-xs-5">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Önerilen Ürünler</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Ürün</th>
                            <th width="200">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Urunler.Model)
                                </td>
                                <td>
                                    @Html.ActionLink("Sil", "Delete", new { id = item.OneriID }, new { @class = "btn-danger btn-xs" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

    </div>
</div>