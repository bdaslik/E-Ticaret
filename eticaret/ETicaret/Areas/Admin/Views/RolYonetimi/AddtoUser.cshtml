@model ETicaret.Areas.Admin.Models.RolKullaniciEkleModel
@{
    ViewBag.Title = "Kullanıcılara Rol Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("AddtoUser", "RolYonetimi", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        <div class="col-md-6">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <i class="fa fa-text-width"></i>
                    <h3 class="box-title">Kullaniciya Rol Ata</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <p class="control-label col-md-2"><b>Kullanici Adı :</b></p>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.kullaniciAdi, new { htmlAttributes = new { @class = "form-control", placeholder = "Kullanıcı adını giriniz.." } })
                                @Html.ValidationMessageFor(model => model.kullaniciAdi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <p class="control-label col-md-2"><b>Rol Adı :</b></p>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.rolAd, new { htmlAttributes = new { @class = "form-control", placeholder = "Rol giriniz..." } })
                                @Html.ValidationMessageFor(model => model.rolAd, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Kullanıcıya Ata" class="btn btn-success btn-sm" /> |
                                @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn-default btn-sm" })

                            </div>
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- ./col -->


    </div>


}

