@model ETicaret.Slider

@{
    ViewBag.Title = "Slider Düzenleme";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Slider Düzenle</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <div class="form-horizontal">
               
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.SlideID)

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Resim Yolu :</b></p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ResimYolu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ResimYolu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Başlık :</b></p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Fiyat :</b></p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Fiyat, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Fiyat, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Mesaj :</b></p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Mesaj, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Mesaj, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Ürün ID :</b></p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.link, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.link, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Başlık :</b></p>
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.aktif)
                            @Html.ValidationMessageFor(model => model.aktif, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-success btn-sm" /> | @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-default btn-sm" })
                    </div>
                </div>
            </div>
        </div><!-- /.box -->
        <!-- Form Element sizes -->

    </div><!--/.col (left) -->

}


