@model IEnumerable<ETicaret.Slider>

@{
    ViewBag.Title = "Slider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Slider Düzenleme</h2>

<div>
    @Html.ActionLink("Yeni Slider Ekle", "Add", null, new { @class = "btn btn-primary" })
</div>


<div class="row">
    <div class="col-xs-12">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Eklenmiş Sliderlar</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Slider Başlığı</th>
                            <th>Ürün Fiyatı</th>
                            <th>Ürün Mesajı</th>
                            <th>Ürün ID</th>
                            <th>Aktiflik</th>
                            <th width="200">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.ResimYolu" style="max-height:50px; width:auto;" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Baslik)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fiyat)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mesaj)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.link)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.aktif)
                                </td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Edit", new { id = item.SlideID }, new { @class = "btn-warning btn-xs" }) |
                                    @Html.ActionLink("Detaylar", "Details", new { id = item.SlideID }, new { @class = "btn-info btn-xs" }) |
                                    @Html.ActionLink("Sil", "Delete", new { id = item.SlideID }, new { @class = "btn-danger btn-xs" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

    </div>
</div>

