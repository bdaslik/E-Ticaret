@model ETicaret.Stok

@{
    ViewBag.Title = "Stoğa Yeni Ürün Girişi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div>
        <div class="col-md-6">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <i class="fa fa-text-width"></i>
                    <h3 class="box-title">Yeni Ürün İçin Stok Girişi</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <p class="control-label col-md-2"><b>Ürün Adı:</b></p>
                            <div class="col-md-10">
                                @Html.DropDownList("UrunID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.UrunID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <p class="control-label col-md-2"><b>Stok Adedi:</b></p>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Adet, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Adet, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Stoğa Ekle" class="btn btn-success btn-lg" />
                            </div>
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- ./col -->

    </div>
}

