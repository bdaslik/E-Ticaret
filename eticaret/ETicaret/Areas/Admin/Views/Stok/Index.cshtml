@model IEnumerable<ETicaret.Stok>

@{
    ViewBag.Title = "Stok İnceleme";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-xs-6">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Mevcut Stok</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Ürün Modeli</th>
                            <th>Stok Adedi</th>
                            <th width="200">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Urunler.Model)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Adet)
                                </td>
                                
                                <td>
                                    @Html.ActionLink("Düzenle", "Edit", new { id = item.StokID }, new { @class = "btn-warning btn-xs" }) |
                                    @Html.ActionLink("Sil", "Delete", new { id = item.StokID }, new { @class = "btn-danger btn-xs" })
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

    </div>
</div>
