@model ETicaret.Blog

@{
    ViewBag.Title = "Düzenleme";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">İnceleme Düzenle</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.BlogID)

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Resim Adresi :</b></p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.BlogResim, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BlogResim, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Ürün :</b></p>
                    <div class="col-md-10">
                        @Html.DropDownList("UrunID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UrunID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Başlık :</b></p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control", placeholder = "Başlığınızı giriniz..." } })
                        @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Metin :</b></p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Metin, new { htmlAttributes = new { @class = "form-control", placeholder = "İnceleme metinizi giriniz..." } })
                        @Html.ValidationMessageFor(model => model.Metin, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2"><b>Tarih :</b></p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.tarih, new { htmlAttributes = new { @class = "form-control", placeholder = "gg-aa-yyyy" } })
                        @Html.ValidationMessageFor(model => model.tarih, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-success btn-sm" /> | @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-default btn-sm" })
                    </div>
                </div>
            </div>
        </div><!-- /.box -->
        <!-- Form Element sizes -->

    </div><!--/.col (left) -->
}

